<% content_for :title, "Marketing Templates" %>

<div class="flex items-center justify-between mb-8">
  <div>
    <h1 class="text-2xl font-semibold text-white">Templates de Marketing</h1>
    <p class="text-[#8696a0] text-sm mt-1">Crie templates com botões, listas e imagens para envio em massa.</p>
  </div>
  <%= link_to new_marketing_template_path,
        class: "bg-[#00a884] hover:bg-[#02966f] text-white font-semibold px-5 py-2.5 rounded-lg text-sm transition-colors flex items-center gap-2" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    Novo Template
  <% end %>
</div>

<% if @templates.empty? %>
  <div class="flex flex-col items-center justify-center py-24 text-[#8696a0]">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mb-4 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
    </svg>
    <p class="text-lg">Nenhum template criado ainda.</p>
    <p class="text-sm mt-1">Clique em "Novo Template" para começar.</p>
  </div>
<% else %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @templates.each do |t| %>
      <div class="bg-[#202c33] rounded-xl p-5 border border-[#2a3942] hover:border-[#3b4a54] transition-colors flex flex-col gap-3">
        <div class="flex items-start justify-between">
          <div>
            <h3 class="text-white font-semibold text-sm"><%= t.name %></h3>
            <p class="text-[#8696a0] text-xs mt-0.5"><%= time_ago_in_words(t.created_at) %> atrás</p>
          </div>
          <div class="flex items-center gap-1">
            <% if t.has_buttons? %>
              <span class="bg-blue-500/20 text-blue-400 text-xs px-2 py-0.5 rounded-full">Botões</span>
            <% end %>
            <% if t.has_list? %>
              <span class="bg-purple-500/20 text-purple-400 text-xs px-2 py-0.5 rounded-full">Lista</span>
            <% end %>
          </div>
        </div>

        <div class="bg-[#1f2c34] rounded-lg p-3 flex-1">
          <% if t.header_type == "image" %>
            <div class="flex items-center gap-1 text-[#8696a0] text-xs mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Imagem
            </div>
          <% elsif t.header_type == "text" && t.header_text.present? %>
            <p class="text-white text-xs font-semibold mb-1"><%= t.header_text %></p>
          <% end %>
          <p class="text-[#d1d7db] text-xs line-clamp-3"><%= t.body %></p>
          <% if t.footer.present? %>
            <p class="text-[#8696a0] text-xs mt-1 italic"><%= t.footer %></p>
          <% end %>
        </div>

        <% if t.has_buttons? %>
          <div class="flex flex-wrap gap-1">
            <% t.buttons.each do |btn| %>
              <span class="border border-[#00a884] text-[#00a884] text-xs px-2 py-0.5 rounded-lg">
                <%= btn["label"] || btn[:label] %>
              </span>
            <% end %>
          </div>
        <% end %>

        <div class="flex gap-2 pt-1 border-t border-[#2a3942]">
          <%= link_to marketing_template_path(t),
                class: "flex-1 text-center text-[#8696a0] hover:text-white text-xs py-1.5 rounded transition-colors" do %>
            Ver
          <% end %>
          <%= link_to edit_marketing_template_path(t),
                class: "flex-1 text-center text-[#8696a0] hover:text-[#00a884] text-xs py-1.5 rounded transition-colors" do %>
            Editar
          <% end %>
          <%= link_to new_marketing_campaign_path(template_id: t.id),
                class: "flex-1 text-center bg-[#00a884]/10 hover:bg-[#00a884]/20 text-[#00a884] text-xs py-1.5 rounded transition-colors" do %>
            Enviar
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
