<div class="p-4">
  <% if query.blank? %>
    <p class="text-[#8696a0] text-sm text-center">Digite algo para buscar nas mensagens.</p>
  <% elsif messages.empty? %>
    <p class="text-[#8696a0] text-sm text-center">Nenhuma mensagem encontrada para "<%= query %>".</p>
  <% else %>
    <p class="text-[#8696a0] text-xs mb-3"><%= messages.size %> resultado(s) para "<%= query %>"</p>
    <div class="space-y-2">
      <% messages.each do |message| %>
        <a href="#<%= dom_id(message) %>"
           class="block p-3 bg-[#2a3942] rounded-lg hover:bg-[#384d56] transition-colors">
          <div class="flex items-center justify-between mb-1">
            <span class="text-[#00a884] text-xs font-semibold"><%= message.sender.display_name %></span>
            <span class="text-[#8696a0] text-xs"><%= message.created_at.strftime("%d/%m/%Y %H:%M") %></span>
          </div>
          <p class="text-[#e9edef] text-sm"><%= message.content&.truncate(100) %></p>
        </a>
      <% end %>
    </div>
  <% end %>
</div>
