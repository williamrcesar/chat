<% color_map = {
  "green"  => "bg-green-500/10 text-green-400 border-green-500/20",
  "teal"   => "bg-[#00a884]/10 text-[#00a884] border-[#00a884]/20",
  "blue"   => "bg-blue-500/10 text-blue-400 border-blue-500/20",
  "purple" => "bg-purple-500/10 text-purple-400 border-purple-500/20"
} %>
<div class="bg-[#161b22] border border-[#30363d] rounded-xl p-5">
  <div class="flex items-start justify-between mb-3">
    <span class="text-[#8b949e] text-xs font-semibold uppercase tracking-wide"><%= label %></span>
    <div class="p-1.5 rounded-lg <%= color_map[color] || color_map['teal'] %> border">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon %>" />
      </svg>
    </div>
  </div>
  <p class="text-3xl font-bold text-white"><%= number_with_delimiter(value) %></p>
  <p class="text-[#8b949e] text-xs mt-1"><%= sub %></p>
</div>
