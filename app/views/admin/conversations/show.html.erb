<% content_for :title, "Conversa ##{@conversation.id}" %>

<div class="flex items-center gap-4 mb-6">
  <%= link_to "â† Conversas", admin_conversations_path, class: "text-[#58a6ff] hover:underline text-sm" %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <div class="bg-[#161b22] border border-[#30363d] rounded-xl p-6">
    <h2 class="text-white font-semibold mb-4">Detalhes</h2>
    <div class="space-y-3 text-sm">
      <div><span class="text-[#8b949e]">Nome:</span> <span class="text-white ml-2"><%= @conversation.name || "â€”" %></span></div>
      <div><span class="text-[#8b949e]">Tipo:</span> <span class="text-white ml-2"><%= @conversation.conversation_type %></span></div>
      <div><span class="text-[#8b949e]">Criada:</span> <span class="text-white ml-2"><%= @conversation.created_at.strftime("%d/%m/%Y") %></span></div>
    </div>

    <h3 class="text-white font-semibold mt-6 mb-3">Participantes</h3>
    <div class="space-y-2">
      <% @participants.each do |p| %>
        <div class="flex items-center justify-between">
          <span class="text-white text-sm"><%= p.user.display_name %></span>
          <span class="text-[#8b949e] text-xs"><%= p.role %></span>
        </div>
      <% end %>
    </div>

    <div class="mt-6 pt-4 border-t border-[#30363d]">
      <%= button_to admin_conversation_path(@conversation), method: :delete,
            data: { turbo_confirm: "Remover esta conversa permanentemente?" },
            class: "w-full py-2 bg-red-500/10 text-red-400 border border-red-500/20 rounded-lg text-sm hover:bg-red-500/20 transition-colors" do %>
        Remover conversa
      <% end %>
    </div>
  </div>

  <div class="lg:col-span-3 bg-[#161b22] border border-[#30363d] rounded-xl p-6">
    <h3 class="text-white font-semibold mb-4">Ãšltimas 50 mensagens</h3>
    <div class="space-y-2 max-h-[600px] overflow-y-auto">
      <% @messages.each do |msg| %>
        <div class="flex gap-3 p-3 rounded-lg hover:bg-[#21262d] transition-colors">
          <div class="w-7 h-7 rounded-full bg-[#30363d] flex items-center justify-center text-white text-xs font-semibold flex-shrink-0 mt-0.5">
            <%= msg.sender.display_name.first.upcase %>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-baseline gap-2 mb-0.5">
              <span class="text-white text-sm font-medium"><%= msg.sender.display_name %></span>
              <span class="text-[#8b949e] text-xs"><%= msg.created_at.strftime("%d/%m %H:%M") %></span>
              <span class="text-[#8b949e] text-xs"><%= msg.message_type %></span>
            </div>
            <% if msg.deleted_for_everyone? %>
              <p class="text-[#8b949e] text-sm italic">Mensagem apagada</p>
            <% else %>
              <p class="text-[#c9d1d9] text-sm break-words"><%= msg.content&.truncate(200) %></p>
              <% if msg.attachment.attached? %>
                <span class="text-[#58a6ff] text-xs">ðŸ“Ž <%= msg.attachment.filename %></span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
