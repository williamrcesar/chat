<% content_for :title, "Chat" %>

<div class="flex h-screen bg-[#111b21]" data-controller="presence contact-requests">

  <%# SIDEBAR %>
  <div class="w-[400px] min-w-[400px] flex flex-col border-r border-[#2a3942] bg-[#111b21]">

    <%# Sidebar Header %>
    <div class="flex items-center justify-between px-4 py-3 bg-[#202c33]">
      <%= link_to profile_path, class: "flex items-center gap-3 group" do %>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
        <% else %>
          <div class="w-10 h-10 rounded-full bg-[#6a7175] flex items-center justify-center text-white font-semibold text-sm">
            <%= current_user.display_name.first.upcase %>
          </div>
        <% end %>
      <% end %>

      <div class="flex items-center gap-2 ml-auto">
        <%# Contact requests badge %>
        <%= link_to contact_requests_path, class: "relative p-2 rounded-full hover:bg-[#2a3942] transition-colors", title: "Solicitações de contato" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <% if @pending_requests_count > 0 %>
            <span id="contact-requests-badge"
                  class="absolute -top-1 -right-1 bg-[#00a884] text-white text-xs font-bold rounded-full w-4 h-4 flex items-center justify-center">
              <%= @pending_requests_count %>
            </span>
          <% end %>
        <% end %>

        <%= link_to marketing_templates_path, class: "p-2 rounded-full hover:bg-[#2a3942] transition-colors", title: "Marketing" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
        <% end %>

        <%# Company inbox link — shown when the user owns or is in a company %>
        <% if current_user.owned_companies.any? || current_user.company_attendants.any? %>
          <%= link_to company_dashboard_path, class: "p-2 rounded-full hover:bg-[#2a3942] transition-colors", title: "Painel Empresa" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          <% end %>
        <% else %>
          <%= link_to new_company_path, class: "p-2 rounded-full hover:bg-[#2a3942] transition-colors", title: "Criar Empresa" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          <% end %>
        <% end %>

        <%= link_to templates_path, class: "p-2 rounded-full hover:bg-[#2a3942] transition-colors", title: "Templates" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h10" />
          </svg>
        <% end %>

        <%# Push notification bell %>
        <div data-controller="push-notifications" title="Notifications">
          <button data-push-notifications-target="button"
                  data-action="click->push-notifications#subscribe"
                  class="p-2 rounded-full hover:bg-[#2a3942] transition-colors text-[#8696a0]">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </button>
        </div>

        <button data-action="click->new-conversation#toggle"
                class="p-2 rounded-full hover:bg-[#2a3942] transition-colors" title="Nova conversa">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
        </button>

        <%= link_to destroy_user_session_path, data: { turbo_method: :delete },
              class: "p-2 rounded-full hover:bg-[#2a3942] transition-colors", title: "Sair" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#aebac1]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
          </svg>
        <% end %>
      </div>
    </div>

    <%# Search bar %>
    <div class="px-3 py-2 bg-[#111b21]">
      <div class="flex items-center bg-[#202c33] rounded-lg px-4 py-2 gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#8696a0]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z" />
        </svg>
        <input type="text" placeholder="Pesquisar ou começar uma nova conversa"
               class="bg-transparent text-[#d1d7db] placeholder-[#8696a0] text-sm outline-none w-full"
               data-action="input->conversation-search#filter">
      </div>
    </div>

    <%# Conversations list %>
    <div class="flex-1 overflow-y-auto" id="conversations-list" data-controller="conversation-search">
      <% if @conversations.empty? %>
        <div class="flex flex-col items-center justify-center h-64 text-[#8696a0] text-sm px-8 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-4 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <p>Nenhuma conversa ainda.<br>Clique em + para começar.</p>
        </div>
      <% end %>

      <% @conversations.each do |conversation| %>
        <%= render "conversations/conversation_item", conversation: conversation, current_user: current_user %>
      <% end %>

      <%# Archived conversations — collapsible %>
      <% if @archived_conversations.any? %>
        <details class="border-t border-[#2a3942]">
          <summary class="flex items-center gap-2 px-4 py-3 text-[#8696a0] text-sm cursor-pointer hover:bg-[#2a3942] select-none list-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
            Arquivadas (<%= @archived_conversations.size %>)
          </summary>
          <% @archived_conversations.each do |conversation| %>
            <div class="relative group/arc">
              <%= render "conversations/conversation_item", conversation: conversation, current_user: current_user %>
              <%= button_to unarchive_conversation_path(conversation), method: :patch,
                    class: "absolute right-2 top-1/2 -translate-y-1/2 hidden group-hover/arc:block text-[#8696a0] hover:text-[#00a884] p-1 rounded",
                    title: "Desarquivar" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                </svg>
              <% end %>
            </div>
          <% end %>
        </details>
      <% end %>
    </div>
  </div>

  <%# MAIN PANEL — empty state %>
  <div class="flex-1 flex flex-col items-center justify-center bg-[#222e35]">
    <div class="text-center text-[#8696a0]">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 mx-auto mb-6 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <h2 class="text-2xl font-light mb-2">Chat Web</h2>
      <p class="text-sm max-w-sm">Selecione uma conversa para começar a trocar mensagens.</p>
    </div>
  </div>

</div>

<%# Forward message modal %>
<div id="forward-modal"
     class="hidden fixed inset-0 bg-black/60 z-40 flex items-center justify-center">
  <div class="bg-[#202c33] rounded-xl shadow-2xl w-full max-w-sm p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-white font-semibold">Encaminhar para...</h2>
      <button onclick="document.getElementById('forward-modal').classList.add('hidden')"
              class="text-[#8696a0] hover:text-white">✕</button>
    </div>
    <%= form_with url: "#", method: :post,
          data: { "base-action": forward_conversation_messages_path("__CONV__") },
          id: "forward-form" do |f| %>
      <%= f.hidden_field :message_id, value: "" %>
      <div class="space-y-1 max-h-64 overflow-y-auto mb-4">
        <% current_user.conversations.includes(:users).recent.each do |convo| %>
          <label class="flex items-center gap-3 p-2 rounded-lg hover:bg-[#2a3942] cursor-pointer">
            <%= radio_button_tag :target_conversation_id, convo.id, false,
                  class: "accent-[#00a884]",
                  name: "target_conversation_id" %>
            <span class="text-white text-sm"><%= convo.display_name_for(current_user) %></span>
          </label>
        <% end %>
      </div>
      <button type="submit"
              class="w-full bg-[#00a884] hover:bg-[#02966f] text-white font-semibold py-2 rounded-lg text-sm transition-colors">
        Encaminhar
      </button>
    <% end %>
  </div>
</div>

<%# New conversation modal %>
<div id="new-conversation-modal"
     class="hidden fixed inset-0 bg-black/60 z-40 flex items-center justify-center"
     data-controller="new-conversation">
  <div class="bg-[#202c33] rounded-xl shadow-2xl w-full max-w-md p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-white font-semibold text-lg">Nova Conversa</h2>
      <button data-action="click->new-conversation#close" class="text-[#8696a0] hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <%# Nickname / phone search — sends a contact request %>
    <h3 class="text-[#00a884] text-sm font-semibold mb-3">Buscar por @nickname ou telefone</h3>
    <%= form_with url: contact_requests_path, method: :post, class: "space-y-3 mb-4" do |f| %>
      <div class="flex gap-2">
        <%= f.text_field :nickname,
              placeholder: "@nickname ou nome de exibição",
              class: "flex-1 bg-[#2a3942] text-white placeholder-[#8696a0] rounded-lg px-4 py-2 text-sm outline-none border border-transparent focus:border-[#00a884]" %>
        <%= f.submit "Enviar",
              class: "bg-[#00a884] hover:bg-[#02966f] text-white text-sm font-semibold px-4 py-2 rounded-lg cursor-pointer transition-colors" %>
      </div>
      <%= f.hidden_field :message_type, value: "text" %>
      <%= f.hidden_field :message_content, value: "Olá! Gostaria de conversar com você." %>
    <% end %>

    <%# Existing contacts %>
    <h3 class="text-[#00a884] text-sm font-semibold mb-3">Seus Contatos</h3>
    <div class="space-y-1 max-h-40 overflow-y-auto">
      <% @users.each do |user| %>
        <% if current_user.contact_with?(user) %>
          <%= button_to conversation_path(user_id: user.id), method: :post,
                class: "w-full flex items-center gap-3 p-3 rounded-lg hover:bg-[#2a3942] transition-colors text-left" do %>
            <div class="w-10 h-10 rounded-full bg-[#6a7175] flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
              <%= user.display_name.first.upcase %>
            </div>
            <div class="text-left">
              <p class="text-white text-sm font-medium"><%= user.display_name %></p>
              <p class="text-[#8696a0] text-xs"><%= user.nickname.present? ? "@#{user.nickname}" : user.email %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="border-t border-[#2a3942] mt-4 pt-4">
      <h3 class="text-[#00a884] text-sm font-semibold mb-3">Criar Grupo</h3>
      <%= form_with url: conversations_path, method: :post, class: "space-y-3" do |f| %>
        <%= f.hidden_field :conversation_type, value: "group" %>
        <%= f.text_field :name, placeholder: "Nome do grupo",
              class: "w-full bg-[#2a3942] text-white placeholder-[#8696a0] rounded-lg px-4 py-2 text-sm outline-none border border-transparent focus:border-[#00a884]" %>
        <%= f.submit "Criar Grupo",
              class: "w-full bg-[#00a884] hover:bg-[#02966f] text-white font-semibold py-2 rounded-lg text-sm transition-colors cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
