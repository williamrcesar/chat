<div class="flex items-center justify-center min-h-screen bg-[#111b21]">
  <div class="w-full max-w-md">

    <%# Logo / Header %>
    <div class="text-center mb-8">
      <div class="w-20 h-20 bg-[#00a884] rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
      </div>
      <h1 class="text-white text-2xl font-light">Chat</h1>
      <p class="text-[#8696a0] text-sm mt-1">Entre na sua conta para continuar</p>
    </div>

    <div class="bg-[#202c33] rounded-2xl p-8 shadow-2xl">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="space-y-4">
          <div>
            <%= f.label :email, "Email", class: "block text-[#8696a0] text-xs font-semibold mb-1 uppercase tracking-wide" %>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: "seu@email.com",
                  class: "w-full bg-[#2a3942] text-white placeholder-[#8696a0] rounded-lg px-4 py-3 text-sm outline-none border border-transparent focus:border-[#00a884] transition-colors" %>
          </div>

          <div>
            <%= f.label :password, "Senha", class: "block text-[#8696a0] text-xs font-semibold mb-1 uppercase tracking-wide" %>
            <%= f.password_field :password,
                  autocomplete: "current-password",
                  placeholder: "••••••••",
                  class: "w-full bg-[#2a3942] text-white placeholder-[#8696a0] rounded-lg px-4 py-3 text-sm outline-none border border-transparent focus:border-[#00a884] transition-colors" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me, class: "w-4 h-4 rounded accent-[#00a884]" %>
              <%= f.label :remember_me, "Lembrar de mim", class: "text-[#8696a0] text-sm" %>
            </div>
          <% end %>

          <%= f.submit "Entrar",
                class: "w-full bg-[#00a884] hover:bg-[#02966f] text-white font-semibold py-3 rounded-lg text-sm transition-colors cursor-pointer mt-2" %>
        </div>
      <% end %>

      <div class="mt-6 text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
